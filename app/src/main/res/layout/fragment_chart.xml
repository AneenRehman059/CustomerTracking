<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.ChartFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:text="TODAY"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:text="Daily Visits"
        android:textSize="@dimen/_12ssp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp">

        <TextView
            android:id="@+id/txt_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Today"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_yesterday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_today"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Yesterday"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/progressbarId"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_below="@+id/txt_today"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_toEndOf="@+id/txt_yesterday"
            android:progressBackgroundTint="#C0B8B8"
            android:progressTint="#E91E63" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="8.00"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/progressbarId"
            android:layout_below="@+id/txt_today"/>
        <TextView
            android:id="@+id/txt_tue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_yesterday"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Tue"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/progrss2"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_below="@+id/progressbarId"
            android:layout_marginLeft="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_toRightOf="@+id/txt_tue"
            android:progressBackgroundTint="#C0B8B8"
            android:progressTint="#E91E63" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="7.50"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/progrss2"
            android:layout_below="@+id/txt_yesterday"/>

        <TextView
            android:id="@+id/txt_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_tue"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Mon"
            android:textColor="@color/black" />
        <ProgressBar
            android:id="@+id/progress3"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_below="@+id/progrss2"
            android:layout_marginLeft="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@+id/txt_tue"
            android:progressBackgroundTint="#C0B8B8"
            android:progressTint="#E91E63" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="5.06"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/progress3"
            android:layout_below="@+id/txt_tue"/>

        <TextView
            android:id="@+id/txt_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_mon"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Sun"
            android:textColor="@color/black" />


        <TextView
            android:id="@+id/txt_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_sun"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Sat"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/progress5"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_below="@+id/progress3"
            android:layout_marginLeft="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_40sdp"
            android:layout_toRightOf="@+id/txt_sat"
            android:progressBackgroundTint="#C0B8B8"
            android:progressTint="#E91E63" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="2.11"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/progress5"
            android:layout_below="@+id/txt_sun"/>

        <TextView
            android:id="@+id/txt_fri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_sat"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="Fri"
            android:textColor="@color/black" />

        <ProgressBar
            android:id="@+id/progress6"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_8sdp"
            android:layout_below="@+id/progress5"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_toRightOf="@+id/txt_fri"
            android:progressBackgroundTint="#C0B8B8"
            android:progressTint="#E91E63" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_13sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:text="7.33"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/progress6"
            android:layout_below="@+id/txt_sat"/>
    </RelativeLayout>

</LinearLayout>